{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild index.ts --bundle --splitting --platform=node --format=esm --packages=external --sourcemap=external --outdir=dist",
    "preview": "npm run build && node --enable-source-maps dist/index.js",
    "start": "tsc --build && node dist/index.js",
    "dev": "npx tsx watch index.ts",
    "test": "set NODE_ENV=test && vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JeremyLoh/xtal.git"
  },
  "author": "JeremyLoh",
  "bugs": {
    "url": "https://github.com/JeremyLoh/xtal/issues"
  },
  "homepage": "https://github.com/JeremyLoh/xtal#readme",
  "description": "Backend for xtal application",
  "dependencies": {
    "cors": "2.8.5",
    "dayjs": "1.11.13",
    "dompurify": "^3.2.4",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "express-rate-limit": "7.5.0",
    "express-validator": "7.2.1",
    "jsdom": "^26.0.0",
    "ky": "1.7.4"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/jsdom": "21.1.7",
    "@types/node": "22.12.0",
    "@types/supertest": "6.0.2",
    "esbuild": "0.24.2",
    "msw": "2.7.0",
    "supertest": "7.0.0",
    "tsx": "4.19.2",
    "typescript": "5.7.3",
    "vitest": "3.0.4"
  }
}
